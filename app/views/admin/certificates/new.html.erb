  <%= form_for @certificate, url: admin_certificates_path, html: { multipart: true } do |form| %>
  <div class="row">
    <div class="col">
      <h5 class="ml-3">Info</h5>
      <div class="form-group">
        <%= form.label :speaker, "Speaker *", class: "col control-label" %>
        <div class="col">
          <%= form.text_field :speaker, placeholder: 'Илон Маск', required: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :speaker_eng, "Speaker (eng)", class: "col control-label" %>
        <div class="col">
          <%= form.text_field :speaker_eng, placeholder: 'Ilon Musk', class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :date, "Date *", class: "col control-label" %>
        <div class="col">
          <%= form.date_field :date, required: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :name, "Filename *", class: "col control-label" %>
        <div class="col">
          <%= form.text_field :name, placeholder: 'musk', required: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :description, "Description *", class: "col control-label" %>
        <div class="col">
          <%= form.text_area :description, placeholder: 'Обсуждение проблемы терраформирования Марса', required: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :description_eng, "Description (eng)", class: "col control-label" %>
        <div class="col">
          <%= form.text_area :description_eng, placeholder: 'Discussion of the problems of terraforming Mars', class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="col">
      <%= form.fields_for :rus_template do |rus| %>
        <h5 class="ml-3">🇷🇺Rus template</h5>
        <div class="form-group">
          <%= rus.label :xpos, "X-pos *", class: "col control-label" %>
          <div class="col">
            <%= rus.number_field :xpos, step: 1, placeholder: '400', class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= rus.label :ypos, "Y-pos *", class: "col control-label" %>
          <div class="col">
            <%= rus.number_field :ypos, step: 1, placeholder: '100', class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= rus.label :font_size, "Font size *", class: "col control-label" %>
          <div class="col">
            <%= rus.number_field :font_size, min: 1, step: 1, placeholder: '82', class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= rus.label :font_color, "Font color (CMYK code) *", class: "col control-label" %>
          <div class="col">
            <%= rus.text_field :font_color, placeholder: '0,0,0,0', class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= rus.label :pdf_file, "PDF file *", class: "col control-label" %>
          <div class="col">
            <%= rus.file_field :pdf_file, class: "form-control" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col">
      <%= form.fields_for :eng_template do |eng| %>
        <h5 class="ml-3">🇺🇸Eng Template</h5>
        <div class="form-group">
          <%= eng.label :xpos, "X-pos *", class: "col control-label" %>
          <div class="col">
            <%= eng.number_field :xpos, step: 1, placeholder: '600', class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= eng.label :ypos, "Y-pos *", class: "col control-label" %>
          <div class="col">
            <%= eng.number_field :ypos, step: 1, placeholder: '200', class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= eng.label :font_size, "Font size *", class: "col control-label" %>
          <div class="col">
            <%= eng.number_field :font_size, min: 1, step: 1, placeholder: '82', class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= eng.label :font_color, "Font color (CMYK code) *", class: "col control-label" %>
          <div class="col">
            <%= eng.text_field :font_color, placeholder: '0,0,0,0', class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= eng.label :pdf_file, "PDF file *", class: "col control-label" %>
          <div class="col">
            <%= eng.file_field :pdf_file, class: "form-control" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group mt-5 ml-3">
    <%= link_to "back", admin_certificates_path, class: "btn btn-light" %>
    <%= form.submit class: "btn btn-outline-secondary" %>
  </div>
  <% end %>






