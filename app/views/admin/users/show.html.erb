<div class="container mt-5">

  <div class="d-flex justify-content-between">
    <div class="d-flex align-items-baseline">
      <% if @user.state == 'done' %>
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="green" class="bi bi-check-circle-fill mr-2" viewBox="0 0 16 16">
          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </svg>
      <% end %>
      <h1>
      User #<%= @user.id %>
    </h1>
    </div>

    <div style="display: flex; align-items: center; justify-content: flex-start;">
      <%= link_to 'Edit', edit_admin_user_path(@user), class: "btn btn-outline-secondary btn-sm" %>
      <%= button_to 'Delete', admin_user_path(@user), class: 'btn btn-outline-danger btn-sm ml-2', method: :delete, data: { confirm: 'Are you sure you want to DELETE this User?' } %>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-sm-9">
      <table class="table table-borderless table-sm">
        <thead>
        <tr>
          <th scope="col" style="width: 30%;"></th>
          <th scope="col" style="width: 70%;"></th>
        </tr>
        </thead>
        <tbody>

        <tr>
          <td><span class="font-weight-lighter">Marathon:</span></td>
          <td><span class="font-weight-normal"><%= link_to @user.marathon.name, admin_marathon_path(@user.marathon) %></span></td>

        </tr>

        <tr>
          <td><span class="font-weight-lighter">Email:</span></td>
          <td><span class="font-weight-normal"><%= @user.email %></span></td>
        </tr>

        <tr>
          <td><span class="font-weight-lighter">Firstname:</span></td>
          <td><span class="font-weight-normal"><%= @user.firstname %></span></td>
        </tr>

        <tr>
          <td><span class="font-weight-lighter">Lastname:</span></td>
          <td><span class="font-weight-normal"><%= @user.lastname %></span></td>
        </tr>

<!--        <tr>-->
<!--          <td><span class="font-weight-lighter">Language:</span></td>-->
<!--          <td><span class="font-weight-normal"><%#= @user.language %></span></td>-->
<!--        </tr>-->

        <tr>
          <td><span class="font-weight-lighter">Created:</span></td>
          <td>
            <% if @user.table %>
              <span class="font-weight-normal">from table <a href="<%= admin_table_url(@user.table) %>"><%= @user.table.name %></a></span></td>
            <% else %>
              <span class="font-weight-normal">manually</span>
            <% end %>
          </td>
        </tr>

        <tr>
          <td><span class="font-weight-lighter">Template file with name:</span></td>
          <td><span class="font-weight-normal"><%= link_to "open", @user.text.url(:original, false), target: :_blank %></span></td>
        </tr>

        <tr>
          <td><span class="font-weight-lighter">Created at:</span></td>
          <td><span class="font-weight-lighter"><%= @user.created_at.strftime('%d.%m.%y %H:%M') %></span></td>
        </tr>

        <tr>
          <td><span class="font-weight-lighter">Updated at:</span></td>
          <td><span class="font-weight-lighter"><%= @user.updated_at.strftime('%d.%m.%y %H:%M') %></span></td>
        </tr>

        </tbody>
      </table>
    </div>
  </div>

  <hr>

  <div class="d-flex justify-content-between">
    <%= link_to "All users", admin_users_path(), class: "btn btn-outline-secondary btn-sm" %>
    <div style="display: flex; align-items: center; justify-content: flex-start;">
      <% if @user.marathon.lectures.any? %>
        <a class="btn btn-success btn-sm" href="<%= admin_download_one_pdf_path(id: @user.id, lecture_id: @user.marathon.lectures.sample.id) %>" target="_blank">
          Download ONE
        </a>
        <a class="btn btn-success btn-sm ml-2" href="<%= admin_download_all_pdfs_path(id: @user.id, admin: true) %>" target="_blank">
          Download ZIP
        </a>
      <% end %>
    </div>
  </div>






</div>

